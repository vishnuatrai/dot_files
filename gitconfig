	autocrlf = input
[alias]
  ci = commit        
  co = checkout
  c = commit -m
  a = add
  di = diff
  dic = diff --cached
  pl = pull
  ps = push
  plre = pull --rebase
  st = status
  out = log origin..HEAD
  bra = branch -a

